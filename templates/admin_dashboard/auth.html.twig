{% extends 'admin_core/layout/admin.html.twig' %}

{% block page_id %}auth{% endblock %}

{% block header %}
    {% include 'admin_core/partial/header.html.twig' %}
{% endblock %}

{% block sidebar %}{# empty #}{% endblock %}

{% block main %}
    <form class="signin">
        <label for="username">
            <input type="text" id="username" class="form-control" placeholder="{{ _('Username') }}" autocomplete="off">
        </label>

        <label for="password">
            <input type="password" id="password" class="form-control" placeholder="{{ _('Password') }}">
        </label>

        <button class="btn" type="submit">{{ _('Sign in') }}</button>
    </form>
{% endblock %}