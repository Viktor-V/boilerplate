{% extends 'admin_core/layout/admin.html.twig' %}

{% block title %}
    {% if language.prime %}
        {{ __a('%s language (prime) - edit', language.name) }}
    {% else %}
        {{ __a('%s language - edit', language.name) }}
    {% endif %}
{% endblock %}

{% block headline %}
    <div class="headline">
        <div class="headline-body">
            <div class="headline-title">
                <h3>{{ block('title') }}</h3>
            </div>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    {% set form = editForm.createView %}

                    {{ form_start(form, {attr: {id: 'edit'}}) }}
                        {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary me-2" form="edit">{{ _a('Edit') }}</button>

                    {% if not language.prime %}
                        {% set primeFormView = primeForm.createView %}
                        {{ form_start(primeFormView, {'attr': {'class': 'd-inline'}}) }}
                            {{ form_widget(primeFormView.identifier, {value: language.identifier}) }}

                            <button type="submit" class="btn btn-info me-2">{{ _a('Set as prime') }}</button>
                        {{ form_end(primeFormView) }}
                    {% endif %}

                    <a href="{{ path(constant('App\\Admin\\AdminLanguage\\Infrastructure\\Controller\\LanguageViewController::LANGUAGE_ROUTE_NAME')) }}" class="btn btn-secondary">
                        {{ _a('Back') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
