{% if sortClass is not defined %}
    {% set sortClass = 'sorting' %}
{% endif %}

{% if pagination.isSorted(key) %}
    {% if app.request.query.get('direction') is same as('asc') %}
        {% set sortClass = 'sorting sorting-asc' %}
    {% else %}
        {% set sortClass = 'sorting sorting-desc' %}
    {% endif %}
{% endif %}

<th class="{{ sortClass }}">
    {{ knp_pagination_sortable(pagination, block('title'), key) }}
</th>
