{% block hidden_captcha_widget %}
    {% if captcha_type in ['recaptcha', 'hcaptcha'] %}
        {% if captcha_type == 'recaptcha' %}
            {% include 'common/anti_spam/form/partial/recaptcha.html.twig' %}
