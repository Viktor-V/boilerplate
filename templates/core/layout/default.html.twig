<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {% block title %}
            {{ project }}
        {% endblock %}
    </title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}

        <style>
            noscript .noscript {
                width: 100%;
                height: 100%;
                background: white;
                display: block;
                position: absolute;
                top: 0;
                left: 0;
            }
        </style>
    {% endblock %}
</head>
<body>
    {% include 'core/partial/noscript.html.twig' %}

    <main>
        <div class="container py-4">
            {% block header %}
                {% include 'core/partial/header.html.twig' %}
            {% endblock %}

            {% block main %}
                {# main block #}
            {% endblock %}

            {% block footer %}
                {% include 'core/partial/footer.html.twig' %}
            {% endblock %}
        </div>
    </main>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
