{% extends 'core/admin/layout/admin.html.twig' %}

{% block title %}{{ _a('Cache control') }}{% endblock %}

{% block headline %}
    <div class="headline">
        <div class="headline-body">
            <div class="headline-title">
                <h3>{{ block('title') }}</h3>
            </div>

            <div class="headline-right">
                {% set clearForm = clearForm.createView %}
                {{ form_start(clearForm) }}
                    <button type="submit" class="btn btn-primary">{{ _a('Clear') }}</button>
                {{ form_end(clearForm) }}

                {% set warmForm = warmForm.createView %}
                {{ form_start(warmForm) }}
                    <button type="submit" class="btn btn-secondary">{{ _a('Warm') }}</button>
                {{ form_end(warmForm) }}
            </div>
        </div>
    </div>
{% endblock %}
