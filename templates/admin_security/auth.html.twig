{% extends 'admin_core/layout/admin.html.twig' %}

{% block title %}{{ _('Authenticate') }}{% endblock %}

{% block page_id %}auth{% endblock %}

{% block header %}
    {% include 'admin_core/partial/header.html.twig' %}
{% endblock %}

{% block sidebar %}{# empty #}{% endblock %}

{% block main %}
    <form class="signin">
        {% if error %}
            <div class="alert alert-danger alert-dismissible" role="alert" data-controller="close">
                {{ error.messageKey|trans(error.messageData, 'security')  }}

                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="alert"
                        aria-label="{{ _('close') }}"
                        data-action="click->close#close"
                >{# empty #}</button>
            </div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"

        <label for="username">
            <input type="text" id="username" name="username" class="form-control" placeholder="{{ _('Username') }}" autocomplete="off">
        </label>

        <label for="password">
            <input type="password" id="password" name="password" class="form-control" placeholder="{{ _('Password') }}">
        </label>

        <button class="btn" type="submit">{{ _('Sign in') }}</button>
    </form>
{% endblock %}
